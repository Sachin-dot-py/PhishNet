{
    "manifest_version": 3,
    "name": "Phish Net",
    "version": "1.0",
    "description": "A chrome extension that flags fake news on almost every social media website and comes with a practice game.",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icons/logo_black.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://*/*"],
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"],
        "run_at": "document_idle"
    }
    ]
}